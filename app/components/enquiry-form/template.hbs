<!-- {{yield}} -->
<div class="col-lg-12 col-xs-12 enquiry-form mb50">

  <h3 class="text-center">Who do you like the look of?</h3>
  <div>
    {{#x-select class="animal-input" value=model.name action="selectAnimal"}}
      {{#x-option value=""}}
        Who?
      {{/x-option}}
      {{#each animals as | animal |}}
        {{#x-option value=model.name}}
          {{model.name}}
        {{/x-option}}
      {{/each}}
    {{/x-select}}
  </div>

  <h3 class="text-center mt50">A few details about you please?</h3>
  <label class="input-title" for="title">Title</label>
  <div>
    {{#x-select class="title-input" value=model.title action="selectTitle"}}
      {{#x-option value=""}}
        Please select
      {{/x-option}}
      {{#each titles as | option |}}
        {{#x-option value=option.value}}
          {{option.label}}
        {{/x-option}}
      {{/each}}
    {{/x-select}}
  </div>

  <label class="firstname mt20" for="first-name">First name</label>
  <div class="input-first-name">
    {{input value=model.firstName class="" id="first-name"}}
  </div>

  <label class="lastname mt20" for="last-name">Surname</label>
  <div class="input-last-name">
    {{input value=model.lastName class="" id="last-name"}}
  </div>

  <label class="emailaddress mt20" for="email">Email</label>
  <div class="input-email">
    {{input value=model.email class="" id="email"}}
  </div>

</div>
